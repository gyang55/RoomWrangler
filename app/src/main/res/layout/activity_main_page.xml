<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainPageActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_headerFragement_school_name"
            android:layout_width="294dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textline"
            android:gravity="bottom|end"
            android:text="@string/string_roomwrangler"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView_headerFragement_school_logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fef151"
            android:gravity="center"
            android:text="@string/bcit"
            android:textSize="24sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_mainPage_rooms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnav_main_page"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:menu="@menu/menu_bottomnav" />

</LinearLayout>